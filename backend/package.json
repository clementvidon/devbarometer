{
  "name": "backend",
  "private": true,
  "type": "module",
  "scripts": {
    "cli": "tsx src/cmd/cli.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "test": "vitest run --silent",
    "test:changed": "vitest run --silent --changed || true",
    "test:coverage": "vitest --coverage --silent",
    "check": "npm-run-all --sequential format:check lint type-check test",
    "dev": "tsx src/cmd/http.ts",
    "update-report": "curl -X POST http://localhost:3000/report",
    "db:push": "drizzle-kit push --config=drizzle.config.mjs",
    "db:generate": "drizzle-kit generate --config=drizzle.config.mjs",
    "db:studio": "drizzle-kit studio --config=drizzle.config.mjs",
    "generate-static": "tsx src/cmd/generate-static.ts"
  },
  "dependencies": {
    "drizzle-orm": "^0.43.1",
    "express": "^5.1.0",
    "lowdb": "^7.0.1",
    "openai": "^4.95.0",
    "p-limit": "^5.0.0",
    "pg": "^8.15.6",
    "postgres": "^3.4.5",
    "uuid": "^11.1.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^22.15.17",
    "@types/supertest": "^6.0.3",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.4",
    "supertest": "^7.1.4"
  }
}
