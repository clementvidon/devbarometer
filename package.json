{
  "name": "devbarometer",
  "type": "module",
  "scripts": {
    "start": "npx tsx backend/src/cmd/run.ts",
    "prepare": "husky",
    "type-check": "tsc -p backend/tsconfig.json",
    "lint": "eslint backend",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run --silent --config backend/vitest.config.ts",
    "test:coverage": "vitest --coverage --silent --config backend/vitest.config.ts"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "vitest run --changed"
    ],
    "*.{js,json,yml,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=22"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@types/node": "^22.14.1",
    "@vitest/coverage-v8": "^3.1.1",
    "dotenv": "^16.5.0",
    "eslint": "^9.24.0",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "openai": "^4.95.0",
    "prettier": "3.5.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "lowdb": "^7.0.1",
    "p-limit": "^5.0.0",
    "uuid": "^11.1.0",
    "zod": "^3.24.3"
  }
}
