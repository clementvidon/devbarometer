{
  "name": "@devbarometer/shared",
  "version": "0.0.0",
  "private": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./domain": {
      "types": "./dist/domain/index.d.ts",
      "default": "./dist/domain/index.js"
    },
    "./dto": {
      "types": "./dist/dto/index.d.ts",
      "default": "./dist/dto/index.js"
    },
    "./primitives": {
      "types": "./dist/primitives/index.d.ts",
      "default": "./dist/primitives/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "domain": [
        "dist/domain/index.d.ts"
      ],
      "dto": [
        "dist/dto/index.d.ts"
      ],
      "primitives": [
        "dist/primitives/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "tsc --build tsconfig.build.json --clean",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "test": "vitest run --silent",
    "test:coverage": "vitest --coverage --silent"
  },
  "dependencies": {
    "zod": "^3.25.76"
  }
}
