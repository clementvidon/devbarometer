{
  "compilerOptions": {
    /* Language */
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,

    /* Modules */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,

    /* Output */
    "noEmit": true,

    /* Linting */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
