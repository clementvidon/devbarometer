{
  "compilerOptions": {
    /* Language */
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "strict": true,

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": true,

    /* Output / Linting */
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
